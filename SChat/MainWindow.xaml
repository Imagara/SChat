<Window x:Class="SChat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SChat"
        mc:Ignorable="d"
        Title="SChat"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Loaded="OnLoad"
        Height="450" 
        Width="800">
    <Grid Background="DarkGray">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150*"/>
            <ColumnDefinition Width="643*"/>
        </Grid.ColumnDefinitions>
        <Grid 
            Background="Gray"
            Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="369*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <ScrollViewer VerticalScrollBarVisibility="Hidden">
                    <StackPanel 
                    Name="ChatStackPanel"
                    Margin="0,0,0,30">
                    <Grid Name="ChatGridMain"
                          MouseDown="NewChatSelected"
                          Visibility="Visible"
                          Margin="10" 
                          Width="130" 
                          Height="40">
                          <Image Name="ChatImage"
                              Margin="5,0,0,0"
                              HorizontalAlignment="Left"
                              Width="30"
                              Height="30"
                              Source="Resources/av.jpg">
                          </Image>
                        <Grid 
                            Name="ChatGridText"
                            Margin="40,0,0,0">
                            <Label 
                                Name="ChatNameLabel"
                                Content="Name"
                                FontWeight="Bold"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Top"
                                FontSize="10"
                                Width="90"/>
                            <Label 
                                Name="ChatTextLabel"
                                Content="Some text..."
                                HorizontalAlignment="Left"
                                VerticalAlignment="Bottom"
                                FontSize="10" 
                                Width="90"/>
                        </Grid>
                        <Border
                            Name="ChatBorder"
                            BorderBrush="Black"
                            BorderThickness="1.3"/>
                    </Grid>
                   
                </StackPanel>
                </ScrollViewer>
                <Button 
                    Content="Добавить новый чат"
                    VerticalAlignment="Bottom" 
                    Height="30"
                    Click="AddNewChat">
                </Button>
            </Grid>
            <Grid Grid.Row="1">
                <Image 
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    Width="30"
                    Height="30"
                    Source="Resources/av.jpg">
                </Image>
                <Grid Margin="40,0,0,0">
                    <Label
                        Name="Name"
                        Content="Name"
                        FontWeight="Bold"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        FontSize="10" 
                        Width="110" Height="25"/>
                    <Label 
                        Name="Status"
                        Content="Status"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        FontSize="10" 
                        Width="85" Height="25"/>
                    <Image 
                        Width="25" 
                        Height="25" 
                        VerticalAlignment="Bottom"
                        HorizontalAlignment="Right"/>
                </Grid>
                <Border
                    BorderBrush="Black"
                    BorderThickness="1"
                    VerticalAlignment="Top"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1">
            <Frame Name="MainFrame"/>
        </Grid>
    </Grid>
</Window>
